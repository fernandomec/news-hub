<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Gerenciar Categorias</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin_editor.css">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body>
    <%- include('../partials/header', { user: user }) %>
    <main class="main-content admin-panel">
        <a href="/admin" class="back-button">Voltar ao Painel</a>
        <h1>Categorias</h1>
        <div style="margin-bottom: 1em;">
            <a href="/admin/categorias/nova" class="material-symbols-outlined" title="Nova Categoria" style="color:green;font-size:2em;vertical-align:middle;">add_circle</a>
        </div>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Slug</th>
                    <th>Descrição</th>
                    <th>Data</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach(cat => { %>
                    <tr>
                        <td><%= cat.id %></td>
                        <td><%= cat.nome %></td>
                        <td><%= cat.slug %></td>
                        <td><%= cat.descricao %></td>
                        <td><%= new Date(cat.createdAt).toLocaleDateString('pt-BR') %></td>
                        <td>
                            <a href="/admin/categorias/<%= cat.id %>/editar" class="material-symbols-outlined" title="Editar">edit</a>
                            <form action="/admin/categorias/<%= cat.id %>/apagar" method="POST" style="display:inline;" onsubmit="return confirm('Apagar esta categoria?');">
                                <button type="submit" class="material-symbols-outlined" title="Apagar" style="color:red;background:none;border:none;cursor:pointer;">delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
