<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Criar Categoria</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin_editor.css">
</head>
<body>
    <%- include('../partials/header', { user: user }) %>
    <main class="main-content admin-panel">
        <a href="/admin/categorias" class="back-button">Voltar</a>
        <h1>Criar Categoria</h1>
        <% if (error) { %>
            <div class="message error"><%= error %></div>
        <% } %>
        <form method="POST">
            <label>Nome:</label>
            <input type="text" name="nome" value="<%= categoria?.nome || '' %>" required>
            <label>Slug:</label>
            <input type="text" name="slug" value="<%= categoria?.slug || '' %>" required>
            <label>Descrição:</label>
            <textarea name="descricao" required><%= categoria?.descricao || '' %></textarea>
            <button type="submit">Criar</button>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
